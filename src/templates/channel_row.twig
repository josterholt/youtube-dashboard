<div class="list-row-container">
    <!-- Channel ID: {{ subscription.snippet.resourceId.channelId }} -->
    <div class="title-container">
        <a
            href="https://youtube.com/channel/{{
                subscription.snippet.resourceId.channelId
            }}"
            target="_blank"
            rel="noopener"
            ><img src="{{ subscription.snippet.thumbnails.default.url }}"
        /></a>
        <a
            href="https://youtube.com/channel/{{
                subscription.snippet.resourceId.channelId
            }}"
            >{{ subscription.snippet.title }}</a
        >
        ({{ last_activity }})
    </div>
    <div class="description-container">
        {{ subscription.snippet.description }}
    </div>
    <div class="controls-container">
        <select
            name="add_category"
            js-channel-id="{{ subscription.snippet.resourceId.channelId }}"
            js-data-src="categories"
            style="margin-top: 10px; margin-bottom: 5px"
        >
            <option disabled selected>-- Select a Category --</option>
        </select>
        <button name="category_submit">Go</button>
    </div>
    <!-- {{subscription.snippet.resourceId.channelId}} -->

    {% if play_list_items %}
    <div style="margin-bottom: 25px">
        <button
            class="js-video-list-toggle video-toggle"
            js-channelId="{{ subscription.snippet.resourceId.channelId }}"
        >
            Show Videos
        </button>
    </div>
    <ul
        class="formatted-list"
        style="display: none"
        id="js-video-list-{{ subscription.snippet.resourceId.channelId }}"
    >
        {% for video in play_list_items.0.items %}
        <li>
            <a
                href="https://youtube.com/watch?v={{
                    video.snippet.resourceId.videoId
                }}"
                target="_blank"
                rel="noopener"
                ><img src="{{ video.snippet.thumbnails.default.url }}"
            /></a>

            <a
                href="https://youtube.com/watch?v={{
                    video.snippet.resourceId.videoId
                }}"
                target="_blank"
                rel="noopener"
                >{{ video.snippet.title }}</a
            >
            (Published: {{ video.snippet.publishedAt|date('m/d/Y') }})
        </li>
        {% endfor %}
    </ul>
    {% endif %}
</div>
